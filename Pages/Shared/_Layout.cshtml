@inject WeatherApp.Services.PreferencesService PreferencesService
@{
    var theme = await PreferencesService.GetThemeAsync();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Weather Dashboard</title>

    <!-- Bootstrap - Light or Dark based on theme -->
    @if (theme == "Dark")
    {
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.2.3/dist/darkly/bootstrap.min.css" />
    }
    else
    {
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    }

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherApp.styles.css" asp-append-version="true" />

    <!-- Font Awesome for better icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <!-- Base Styles -->
    <style>
        /* Force cards to be semi-transparent - Base styles that work for both themes */
        .weather-card, .feature-card, .card:not(.navbar) {
            backdrop-filter: blur(10px) !important;
            -webkit-backdrop-filter: blur(10px) !important;
            border: 1px solid rgba(255, 255, 255, 0.3) !important;
        }

        .hero-section {
            background: linear-gradient(135deg, rgba(0, 105, 148, 0.9) 0%, rgba(0, 70, 120, 0.9) 100%) !important;
            backdrop-filter: blur(5px) !important;
            -webkit-backdrop-filter: blur(5px) !important;
        }

        .btn-primary {
            background: linear-gradient(135deg, #006994, #004c6e) !important;
            border: none !important;
        }

            .btn-primary:hover {
                background: linear-gradient(135deg, #0077a3, #005a7a) !important;
                transform: translateY(-2px);
            }
    </style>

    <!-- Theme-Specific Styles -->
    @if (theme == "Dark")
    {
        <style>
            /* Dark Theme Override */
            body {
                color: #fff !important;
            }

            .navbar, .footer {
                background: rgba(20, 30, 40, 0.9) !important;
                backdrop-filter: blur(10px) !important;
                -webkit-backdrop-filter: blur(10px) !important;
                border-bottom: 1px solid rgba(255,255,255,0.1) !important;
            }

                .navbar .nav-link, .navbar-brand {
                    color: #fff !important;
                }

            .weather-card, .feature-card, .card:not(.navbar) {
                background: rgba(30, 40, 50, 0.85) !important;
                color: #fff !important;
            }

            .card-header {
                background: linear-gradient(135deg, #1e3a4a, #0e2a3a) !important;
                color: white !important;
                border-bottom: 1px solid rgba(255,255,255,0.1) !important;
            }

            .text-muted {
                color: #ccc !important;
            }

            .footer {
                color: #ccc !important;
                border-top: 1px solid rgba(255,255,255,0.1) !important;
            }

            .sync-info small {
                color: #ccc !important;
            }

            .sample-city {
                background: rgba(30, 40, 50, 0.9) !important;
                color: #fff !important;
                border-color: rgba(255,255,255,0.2) !important;
            }

                .sample-city:hover {
                    background: #375a7f !important;
                    color: white !important;
                }

            .btn-outline-primary {
                color: #fff !important;
                border-color: #fff !important;
            }

            .btn-outline-info {
                color: #5bc0de !important;
                border-color: #5bc0de !important;
            }

            .btn-outline-light {
                color: #fff !important;
                border-color: #fff !important;
            }

            .btn-outline-secondary {
                color: #ccc !important;
                border-color: #ccc !important;
            }
        </style>
    }
    else if (theme == "Auto")
    {
        <style>
            @@media (prefers-color-scheme: dark) {
                body {
                    color: #fff !important;
                }

                .navbar, .footer {
                    background: rgba(20, 30, 40, 0.9) !important;
                    backdrop-filter: blur(10px) !important;
                    -webkit-backdrop-filter: blur(10px) !important;
                    border-bottom: 1px solid rgba(255,255,255,0.1) !important;
                }

                    .navbar .nav-link, .navbar-brand {
                        color: #fff !important;
                    }

                .weather-card, .feature-card, .card:not(.navbar) {
                    background: rgba(30, 40, 50, 0.85) !important;
                    color: #fff !important;
                }

                .card-header {
                    background: linear-gradient(135deg, #1e3a4a, #0e2a3a) !important;
                    color: white !important;
                }

                .text-muted {
                    color: #ccc !important;
                }

                .footer {
                    color: #ccc !important;
                }

                .sample-city {
                    background: rgba(30, 40, 50, 0.9) !important;
                    color: #fff !important;
                }
            }
        </style>
    }
    else
    {
        <style>
            /* Light Theme (Default) */
            .weather-card, .feature-card, .card:not(.navbar) {
                background: rgba(255, 255, 255, 0.85) !important;
            }

            .navbar, .footer {
                background: rgba(255, 255, 255, 0.85) !important;
            }

            .card-header {
                background: linear-gradient(135deg, rgba(0, 105, 148, 0.95) 0%, rgba(0, 70, 120, 0.95) 100%) !important;
                color: white !important;
            }
        </style>
    }
</head>

<body style="background: url('https://images.pexels.com/photos/457882/pexels-photo-457882.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2') no-repeat center center fixed !important;
      background-size: cover !important;
      position: relative;
      min-height: 100vh;
      margin: 0;
      padding: 0;
      @if (theme == "Dark")
    {
          <text>color: #fff;</text>
      }
 ">

    <!-- Dark overlay to make text readable -->
    <div style="position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg,
                    @if (theme == "Dark")
                    {
                        <text>rgba(0, 20, 40, 0.8)</text>
                    }
                    else
                    {

                        <text>rgba(0, 60, 100, 0.7)</text>
                    }
 0%,
                    @if (theme == "Dark")
                    {
                        <text>rgba(0, 10, 30, 0.9)</text>
                    }
                    else
                    {

                        <text>rgba(0, 30, 70, 0.7)</text>
                    }
 100%);
                z-index: -1;
                pointer-events: none;">
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow mb-3"
             style="@if (theme == "Dark")
                    {
                            <text>background: rgba(20, 30, 40, 0.9) !important;</text>
                    }
                                        else
                    {
                            <text>background: rgba(255, 255, 255, 0.85) !important;</text>
                    }
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-weight: 600; @if (theme == "Dark") {
                <text>color: #fff;</text>
                                }
">
                    <span style="font-size: 1.5rem; margin-right: 5px;">🌤️</span> WeatherWatch
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index" style="font-weight: 500; @if (theme == "Dark") {
                            <text>color: #fff;</text>
                                                        } else
                            {

                                <text>color: #333;</text>
                            }
">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Settings/Index" style="font-weight: 500; @if (theme == "Dark") {
                            <text>color: #fff;</text>
                                                        } else
                            {

                                <text>color: #333;</text>
                            }
">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/DeletedLocations" style="font-weight: 500; @if (theme == "Dark") {
                            <text>color: #fff;</text>
                                                        } else
                            {

                                <text>color: #333;</text>
                            }
">
                                <i class="fas fa-trash"></i> Recycle Bin
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="background: transparent;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer"
            style="@if (theme == "Dark")
                   {
                           <text>background: rgba(20, 30, 40, 0.9) !important; color: #ccc;</text>
                   }
                                      else
                   {
                           <text>background: rgba(255, 255, 255, 0.85) !important;</text>
                   }
                   backdrop-filter: blur(10px);
                   -webkit-backdrop-filter: blur(10px);
                   border-top: 1px solid rgba(255, 255, 255, 0.2) !important;
                   margin-top: 50px;">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    &copy; @DateTime.Now.Year - WeatherWatch - Your Personal Weather Command Center
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>