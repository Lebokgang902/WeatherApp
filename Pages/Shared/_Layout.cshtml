<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Weather Dashboard</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WeatherApp.styles.css" asp-append-version="true" />

    <!-- Font Awesome for better icons (optional) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

    <style>
        /* Force cards to be semi-transparent */
        .weather-card, .feature-card, .card:not(.navbar) {
            background: rgba(255, 255, 255, 0.85) !important;
            backdrop-filter: blur(10px) !important;
            -webkit-backdrop-filter: blur(10px) !important;
            border: 1px solid rgba(255, 255, 255, 0.3) !important;
        }

        .navbar, .footer {
            background: rgba(255, 255, 255, 0.85) !important;
            backdrop-filter: blur(10px) !important;
            -webkit-backdrop-filter: blur(10px) !important;
        }

        .hero-section {
            background: linear-gradient(135deg, rgba(0, 105, 148, 0.9) 0%, rgba(0, 70, 120, 0.9) 100%) !important;
            backdrop-filter: blur(5px) !important;
            -webkit-backdrop-filter: blur(5px) !important;
        }

        .card-header {
            background: linear-gradient(135deg, rgba(0, 105, 148, 0.95) 0%, rgba(0, 70, 120, 0.95) 100%) !important;
            color: white !important;
            border: none !important;
        }

        .btn-primary {
            background: linear-gradient(135deg, #006994, #004c6e) !important;
            border: none !important;
        }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0077a3, #005a7a) !important;
            transform: translateY(-2px);
        }
    </style>
</head>

<body style="background: url('https://images.pexels.com/photos/457882/pexels-photo-457882.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2') no-repeat center center fixed !important;
             background-size: cover !important;
             position: relative;
             min-height: 100vh;
             margin: 0;
             padding: 0;">

    <!-- Dark overlay to make text readable -->
    <div style="position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: linear-gradient(135deg, rgba(0, 60, 100, 0.7) 0%, rgba(0, 30, 70, 0.7) 100%);
                z-index: -1;
                pointer-events: none;">
    </div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3"
             style="background: rgba(255, 255, 255, 0.85) !important;
                    backdrop-filter: blur(10px);
                    -webkit-backdrop-filter: blur(10px);">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index" style="font-weight: 600;">
                    <span style="font-size: 1.5rem; margin-right: 5px;">🌤️</span> WeatherWatch
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index" style="color: #333; font-weight: 500;">
                                <i class="fas fa-tachometer-alt"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Settings/Index" style="color: #333; font-weight: 500;">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                        </li>
                    </ul>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container" style="background: transparent;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted"
            style="background: rgba(255, 255, 255, 0.85) !important;
                   backdrop-filter: blur(10px);
                   -webkit-backdrop-filter: blur(10px);
                   border-top: 1px solid rgba(255, 255, 255, 0.2) !important;
                   margin-top: 50px;">
        <div class="container">
            <div class="row">
                <div class="col text-center">
                    &copy; @DateTime.Now.Year - WeatherWatch - Your Personal Weather Command Center
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>