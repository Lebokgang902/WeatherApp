@page
@model WeatherApp.Pages.Locations.CreateModel
@{
    ViewData["Title"] = "Add Location";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4>Add New Location</h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">@Model.ErrorMessage</div>
                    }

                    <form method="post">
                        <div class="mb-3">
                            <label asp-for="City" class="form-label">City</label>
                            <input asp-for="City" class="form-control" placeholder="e.g., London" required />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Country" class="form-label">Country Code</label>
                            <input asp-for="Country" class="form-control" placeholder="e.g., US, GB, FR"
                                   maxlength="2" minlength="2" required />
                            <span asp-validation-for="Country" class="text-danger"></span>
                            <div class="form-text">2-letter country code (ISO 3166)</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DisplayName" class="form-label">Display Name (Optional)</label>
                            <input asp-for="DisplayName" class="form-control" placeholder="Leave blank to use city name" />
                            <span asp-validation-for="DisplayName" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Add Location</button>
                            <a asp-page="/Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}