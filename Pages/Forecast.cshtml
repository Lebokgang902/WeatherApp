@page
@model WeatherApp.Pages.ForecastModel
@{
    ViewData["Title"] = $"5-Day Forecast - {Model.Location?.DisplayName ?? Model.Location?.City}";
}

<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <h1>5-Day Forecast</h1>
            <h4 class="text-muted">@(Model.Location?.DisplayName ?? Model.Location?.City), @Model.Location?.Country</h4>
        </div>
        <div class="col text-end">
            <a asp-page="/Index" class="btn btn-secondary">← Back to Dashboard</a>
        </div>
    </div>

    @if (Model.Forecasts != null && Model.Forecasts.Any())
    {
        // Group forecasts by day
        var groupedForecasts = Model.Forecasts
        .GroupBy(f => f.ForecastDate.Value.Date)
        .OrderBy(g => g.Key)
        .Take(5);

        <div class="row">
            @foreach (var dayGroup in groupedForecasts)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">@dayGroup.Key.ToString("dddd, MMM d")</h5>
                        </div>
                        <div class="card-body">
                            @{
                                var dayForecast = dayGroup.OrderBy(f => f.ForecastDate).ToList();
                                var high = dayForecast.Max(f => f.Temperature);
                                var low = dayForecast.Min(f => f.Temperature);
                                var noon = dayForecast.FirstOrDefault(f => f.ForecastDate.Value.Hour >= 12);
                            }

                            <div class="text-center mb-3">
                                <h2 class="display-6">@noon?.Temperature.ToString("F1")°C</h2>
                                <p class="lead text-capitalize">@noon?.WeatherDescription</p>
                                <div class="row">
                                    <div class="col">
                                        <span class="text-danger">▲ @high.ToString("F1")°C</span>
                                    </div>
                                    <div class="col">
                                        <span class="text-info">▼ @low.ToString("F1")°C</span>
                                    </div>
                                </div>
                            </div>

                            <div class="small">
                                @foreach (var forecast in dayForecast.Take(4)) // Show 4 time slots per day
                                {
                                    <div class="d-flex justify-content-between align-items-center border-bottom py-2">
                                        <span>@forecast.ForecastDate.Value.ToString("HH:mm")</span>
                                        <span class="text-capitalize">@forecast.WeatherDescription</span>
                                        <strong>@forecast.Temperature.ToString("F1")°C</strong>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h4 class="alert-heading">No forecast data available</h4>
            <p>Click the Refresh button on the dashboard to fetch the 5-day forecast.</p>
            <hr>
            <a asp-page="/Index" class="btn btn-primary">Return to Dashboard</a>
        </div>
    }
</div>